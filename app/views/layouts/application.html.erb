  <script>
    function typeWrite(elemento) {
      const textArray = elemento.innerHTML.split('');
      elemento.innerHTML = ' ';
      textArray.forEach(function(letra, i){
        setTimeout(function(){
          elemento.innerHTML += letra;
        }, 75 * i);
      });
    }

    const title = document.querySelector(`#h2`);
    typeWrite(title);
  </script>
